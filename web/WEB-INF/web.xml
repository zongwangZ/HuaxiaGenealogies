<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <context-param>
        <param-name>dbDriver</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>dbUserName</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>ycsniubi88</param-value>
    </context-param>
    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:mysql://localhost:3306/huaxia_genealogies</param-value>
    </context-param>

    <!--注册 Controller Servlet-->
    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>com.cug.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/loginController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logupController</servlet-name>
        <servlet-class>com.cug.controller.LogupController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logupController</servlet-name>
        <url-pattern>/logupController</url-pattern>
    </servlet-mapping>

    <!--注册 Service Servlet-->
    <servlet>
        <servlet-name>loginService</servlet-name>
        <servlet-class>com.cug.service.LoginService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginService</servlet-name>
        <url-pattern>/loginService</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logupService</servlet-name>
        <servlet-class>com.cug.service.LogupService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logupService</servlet-name>
        <url-pattern>/logupService</url-pattern>
    </servlet-mapping>
</web-app>